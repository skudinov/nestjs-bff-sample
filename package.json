{
  "name": "nest-typescript-starter",
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "service:schema": "cd service/schema && multi-file-swagger index.yaml > schema.json",
    "preservice:start": "cd service && rimraf ./dist && cpx ./src/**/*.{js,json} ./dist && cpx ./selfsigned.* ./dist && cpx ./schema/schema.json ./dist && tsc",
    "service:start": "cd service/dist && cross-var node %NODE_DEBUG_OPTION% ./main.js | pino",
    "start": "node index.js",
    "start:watch": "nodemon",
    "prestart:prod": "tsc",
    "start:prod": "node dist/main.js"
  },
  "dependencies": {
    "@nestjs/common": "^4.5.9",
    "@nestjs/core": "^4.5.10",
    "@nestjs/microservices": "^4.5.8",
    "@nestjs/testing": "^4.5.5",
    "@nestjs/websockets": "^4.5.8",
    "koa": "^2.5.0",
    "koa-pino-logger": "^2.1.3",
    "koa-router": "^7.4.0",
    "koa-send": "^4.1.3",
    "koa2-swagger-ui": "^2.8.0",
    "module-alias": "^2.0.6",
    "pino": "^4.14.0",
    "redis": "^2.7.1",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^5.5.6",
    "typescript": "^2.6.2"
  },
  "devDependencies": {
    "@types/koa": "^2.0.44",
    "@types/koa-pino-logger": "^2.1.1",
    "@types/koa-router": "^7.0.27",
    "@types/node": "^9.3.0",
    "@types/pino": "^4.7.1",
    "chai": "^4.1.2",
    "cpx": "^1.5.0",
    "cross-env": "^5.1.4",
    "cross-var": "git+https://github.com/skudinov/cross-var.git",
    "jasmine": "^3.1.0",
    "multi-file-swagger": "^2.2.0",
    "nodemon": "^1.14.1",
    "rimraf": "^2.6.2",
    "tsconfig-paths": "^3.1.3",
    "tslint": "5.3.2"
  }
}
